<h1>Lists</h1>
<div class="row">
  <% @lists.each do |list| %>
    <div class="col-3">
      <div class="card" style="width: 18rem; height: 150px;">
        <div class="card-custom" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
          <%= link_to list.name, list_path(list), class: 'pb-2 text-white' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
