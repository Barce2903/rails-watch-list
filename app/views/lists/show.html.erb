<h1><%= @list.name %></h1>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary mb-3' %>
<div class="row">
  <% @list.movies.each do |movie| %>
    <div class="col-3">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <p class="card-text"><%= movie.rating %>/10</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
